%p#notice= notice

%h1= @post.title

%p= @post.body

= link_to 'Edit', edit_post_path(@post)
|
= link_to 'Back Home', posts_path
|
= link_to 'Bach to Search', search_path

%h3 Comments

= render @post.comments

%h4 New Comment
= form_for [@post, @post.comments.build] do |f|
  .field
    = f.label :author
    = f.text_field :author

  .field
    = f.label :emails
    = f.text_field :emails

  .field
    = f.label :body
    = f.text_area :body

  .actions
    = f.submit